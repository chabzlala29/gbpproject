<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-group">
    <div>
    <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Email Address'%></div>
  </div>

  <div class="form-group">
    <div>
    <%= f.text_field :firstname , class: 'form-control' , placeholder: 'First Name'%></div>
  </div>

  <div class="form-group">
    <div>    <%= f.text_field :middlename, class: 'form-control', placeholder: 'Middle Name' %></div>
  </div>

  <div class="form-group">
   <div>
    <%= f.text_field :lastname, class: 'form-control', placeholder: 'Last Name' %></div>
  </div>

  <div class="form-group">
    <div>
    <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password (minimum 8 password length)' %></div>
    </div>

    <div class="form-group">
     <div>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Re-type Password'%></div>
    </div>

  <div><%= f.submit "Sign up" , class: 'btn btn-default'%></div>
<% end %>

<%= render "devise/shared/links" %>
