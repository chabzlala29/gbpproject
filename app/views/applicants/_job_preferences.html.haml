%h1 Job Preferences
= f.fields_for :job_preference do |job|
  .sub_section.clearfix
    .form-vertical.left-side
      %label
        1st Preference
      = job.select :first_pref, job_options(Applicant.job_lists)

      %label
        2nd Preference
      = job.select :second_pref, job_options(Applicant.job_lists)

      %label.optional
        3rd Preference
      = job.select :third_pref, job_options(Applicant.job_lists)

    .form-vertical.left-side
      %label#source_label
        Source of application
      = job.select :source, JobPreference::SOURCE_LISTS

      %label.optional
        Specify if others
      = check_box_tag :specify_other
      = job.text_field :source_sub, style: 'display: none'

      %label#job_pref_firstname{style: "display:none"}
        First Name
      = job.text_field :firstname, style: 'display: none'
      %label#job_pref_lastname{style: 'display:none'}
        Last Name
      = job.text_field :lastname, style: 'display: none'
